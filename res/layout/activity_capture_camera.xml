<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/captureCamera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wintone.smartvision_bankCard.ScanCamera">


    <RelativeLayout
        android:id="@+id/rel_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#002559"
        android:layout_centerHorizontal="true"
        android:minHeight="56px" >

        <Button
            android:id="@+id/back_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawablePadding="-10dp"
            android:background="#002559"
            android:textColor="@color/white"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/flash_camera"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/mb_ic_flash_off_24dp" />

        <TextView
            android:id="@+id/title_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:layout_below="@id/rel_1"
        android:background="#D0021B" />

    <RelativeLayout
        android:id="@+id/bg_camera_doctype"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/view1"
        android:visibility="invisible" >

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:screenOrientation="landscape" />

        <TextView
            android:id="@+id/tv_camera_doctypexx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_corner_cam"
            android:textColor="#ffffff"
            android:rotation="90" />

        <bh_ocr.checkauto.camera.com.utill.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00000000" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imbtn_takepic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/camera_btn"
        android:layout_marginBottom="50dp"
        android:rotation="90" />

</RelativeLayout>

